<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingCategoryDef>
        <defName>DMS_Module</defName>
        <label>heavy module</label>
        <parent>ApparelArmor</parent>
    </ThingCategoryDef>

    <!-- 物品型態的龍騎兵裝備 -->
    <ThingDef Name="DMS_ModuleItemBase" Abstract="True">
        <thingClass>ThingWithComps</thingClass>
        <category>Item</category>
        <drawerType>MapMeshOnly</drawerType>
        <resourceReadoutPriority>Middle</resourceReadoutPriority>
        <useHitPoints>true</useHitPoints>
        <selectable>true</selectable>
        <altitudeLayer>Item</altitudeLayer>
        <soundInteract>Metal_Drop</soundInteract>
        <soundDrop>Standard_Drop</soundDrop>
        <stackLimit>1</stackLimit>
        <healthAffectsPrice>true</healthAffectsPrice>
        <intricate>true</intricate>
        <alwaysHaulable>true</alwaysHaulable>
        <drawGUIOverlay>true</drawGUIOverlay>
        <rotatable>false</rotatable>
        <pathCost>14</pathCost>
        <allowedArchonexusCount>-1</allowedArchonexusCount>
        <techLevel>Industrial</techLevel>
        <possessionCount>2</possessionCount>
        <generateCommonality>0</generateCommonality>
        <thingCategories>
            <li>DMS_Module</li>
        </thingCategories>
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.50</drawSize>
        </graphicData>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <Flammability>0.0</Flammability>
            <Beauty>-3</Beauty>
        </statBases>
        <tickerType>Never</tickerType>
        <burnableByRecipe>false</burnableByRecipe>
        <smeltable>false</smeltable>
        <comps>
            <li Class="CompProperties_Forbiddable" />
            <li Class="CompProperties_Styleable" />
            <li>
                <compClass>CompColorable</compClass>
            </li>
            <li>
                <compClass>CompQuality</compClass>
            </li>
        </comps>
    </ThingDef>    
    
    <!--衣服型態的龍騎兵裝備，理論上玩家不應該能獲取 -->
    <ThingDef Name="DMS_ModuleApparelBase" Abstract="True">
        <thingClass>Apparel</thingClass>
        <category>Item</category>
        <drawerType>MapMeshOnly</drawerType>
        <selectable>True</selectable>
        <pathCost>14</pathCost>
        <useHitPoints>false</useHitPoints>
        <techLevel>Industrial</techLevel>
        <generateCommonality>0</generateCommonality>
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.00</drawSize>
        </graphicData>
        <drawGUIOverlay>true</drawGUIOverlay>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <Flammability>0.0</Flammability>
            <Beauty>-3</Beauty>
            <Mass>10</Mass>
        </statBases>
        <altitudeLayer>Item</altitudeLayer>
        <alwaysHaulable>True</alwaysHaulable>
        <tickerType>Never</tickerType>
        <burnableByRecipe>false</burnableByRecipe>
        <smeltable>false</smeltable>
        <thingCategories Inherit="false"/>
        <thingSetMakerTags Inherit="false"/>
        <tradeTags />
        <comps>
            <li Class="CompProperties_Forbiddable" />
            <li Class="CompProperties_Styleable" />
            <li>
                <compClass>CompColorable</compClass>
            </li>
            <li>
                <compClass>CompQuality</compClass>
            </li>
        </comps>
        <modExtensions>
            <li Class="VFECore.ApparelDrawPosExtension">
                <isUnifiedApparel>true</isUnifiedApparel>
            </li>
        </modExtensions>
    </ThingDef>

    <ThingDef Name="DMS_ModuleApparelHead" ParentName="DMS_ModuleApparelBase" Abstract="True">
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
            <parentTagDef>WGApparelHead</parentTagDef>
            <renderSkipFlags>
                <li>Head</li>
            </renderSkipFlags>
        </apparel>
    </ThingDef>

    <ThingDef Name="DMS_ModuleApparelCore" ParentName="DMS_ModuleApparelBase" Abstract="True">
        <apparel>
            <parentTagDef>WGApparelBody</parentTagDef>
            <renderSkipFlags>
                <li>Body</li>
            </renderSkipFlags>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
            </bodyPartGroups>
            <layers>
                <li>Shell</li>
            </layers>
        </apparel>
    </ThingDef>

    <ThingDef Name="DMS_ModuleApparelMountRight" ParentName="DMS_ModuleApparelBase" Abstract="True">
        <apparel>
            <bodyPartGroups>
                <li>Shoulders</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
            <parentTagDef>WGApparelBody</parentTagDef>
        </apparel>
    </ThingDef>

    <ThingDef Name="DMS_ModuleApparelMountLeft" ParentName="DMS_ModuleApparelBase" Abstract="True">
        <apparel>
            <bodyPartGroups>
                <li>Neck</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
            <parentTagDef>WGApparelBody</parentTagDef>
        </apparel>
    </ThingDef>

    <ThingDef Name="DMS_ModuleApparelArmLeft" ParentName="DMS_ModuleApparelBase" Abstract="True">
        <apparel>
            <bodyPartGroups>
                <li>Arms</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
            <parentTagDef>WGApparelBody</parentTagDef>
        </apparel>
    </ThingDef>

    <PawnRenderNodeTagDef>
        <defName>WGApparel</defName>
    </PawnRenderNodeTagDef>
    <PawnRenderNodeTagDef>
        <defName>WGApparelBody</defName>
    </PawnRenderNodeTagDef>
    <PawnRenderNodeTagDef>
        <defName>WGApparelHead</defName>
    </PawnRenderNodeTagDef>

</Defs>
<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- 物品型態的龍騎兵裝備 -->
    <ThingDef Name="DMS_ModuleItemBase" ParentName="ModuleItemBase" Abstract="True">
        <recipeMaker>
            <recipeUsers>
                <li>DMS_TableMachinePrinter</li>
            </recipeUsers>
            <effectWorking>Repair</effectWorking>
            <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
            <workAmount>500</workAmount>
            <soundWorking>Recipe_Machining</soundWorking>
        </recipeMaker>
    </ThingDef>    
    
    <!--衣服型態的龍騎兵裝備，理論上玩家不應該能獲取 -->
    <ThingDef Name="DMS_ModuleApparelBase" Abstract="True">
        <thingClass>Apparel</thingClass>
        <category>Item</category>
        <destroyOnDrop>true</destroyOnDrop>
        <tradeability>None</tradeability>
        <generateCommonality>0</generateCommonality>
        <generateAllowChance>0</generateAllowChance>
        <drawerType>MapMeshOnly</drawerType>
        <selectable>True</selectable>
        <pathCost>14</pathCost>
        <useHitPoints>false</useHitPoints>
        <techLevel>Industrial</techLevel>
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.00</drawSize>
        </graphicData>
        <drawGUIOverlay>true</drawGUIOverlay>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <Flammability>0.0</Flammability>
            <Beauty>-3</Beauty>
            <Mass>10</Mass>
        </statBases>
        <altitudeLayer>Item</altitudeLayer>
        <alwaysHaulable>True</alwaysHaulable>
        <tickerType>Never</tickerType>
        <burnableByRecipe>false</burnableByRecipe>
        <smeltable>false</smeltable>
        <thingCategories Inherit="false"/>
        <thingSetMakerTags Inherit="false"/>
        <tradeTags />
        <comps>
            <li Class="CompProperties_Forbiddable" />
            <li Class="CompProperties_Styleable" />
            <li>
                <compClass>CompColorable</compClass>
            </li>
            <li>
                <compClass>CompQuality</compClass>
            </li>
        </comps>
        <modExtensions>
            <li Class="VFECore.ApparelDrawPosExtension">
                <isUnifiedApparel>true</isUnifiedApparel>
				<showBodyInBedAlways>true</showBodyInBedAlways>
            </li>
        </modExtensions>
    </ThingDef>

    <ThingDef Name="DMS_ModuleApparelHead" ParentName="DMS_ModuleApparelBase" Abstract="True">
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
            <parentTagDef>WGApparelHead</parentTagDef>
            <renderSkipFlags>
                <li>Head</li>
            </renderSkipFlags>
        </apparel>
    </ThingDef>
    <ThingDef Name="DMS_ModuleApparelCore" ParentName="DMS_ModuleApparelBase" Abstract="True">
        <thingClass>WalkerGear.WalkerGear_Core</thingClass>
        <apparel>
            <parentTagDef>WGApparelBody</parentTagDef>
            <renderSkipFlags>
                <li>Body</li>
            </renderSkipFlags>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
            </bodyPartGroups>
            <layers>
                <li>Shell</li>
            </layers>
        </apparel>
		<tools>
			<li>
				<label>mechanical fist</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>24</power>
                <armorPenetration>0.8</armorPenetration>
				<cooldownTime>0.5</cooldownTime>
			</li>
			<li>
				<label>mechanical leg</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>18</power>
                <armorPenetration>0.5</armorPenetration>
				<cooldownTime>1</cooldownTime>
			</li>
		</tools>
    </ThingDef>

    <ThingDef Name="DMS_ModuleApparelAttachment" ParentName="DMS_ModuleApparelBase" Abstract="True">
        <thingCategories>
            <li>DMS_Module_Pack</li>
        </thingCategories>
        <apparel>
            <parentTagDef>WGApparelBody</parentTagDef>
            <bodyPartGroups>
                <li>Waist</li>
            </bodyPartGroups>
            <layers>
                <li>Shell</li>
            </layers>
        </apparel>
    </ThingDef>

    <ThingDef Name="DMS_ModuleApparelMountRight" ParentName="DMS_ModuleApparelBase" Abstract="True">
        <thingCategories>
            <li>DMS_Module_ShoulderRight</li>
        </thingCategories>
        <apparel>
            <bodyPartGroups>
                <li>Shoulders</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
            <parentTagDef>WGApparelBody</parentTagDef>
        </apparel>
    </ThingDef>

    <ThingDef Name="DMS_ModuleApparelMountLeft" ParentName="DMS_ModuleApparelBase" Abstract="True">
        <thingCategories>
            <li>DMS_Module_ShoulderLeft</li>
        </thingCategories>
        <apparel>
            <bodyPartGroups>
                <li>Neck</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
            <parentTagDef>WGApparelBody</parentTagDef>
        </apparel>
    </ThingDef>

    <ThingDef Name="DMS_ModuleApparelArmLeft" ParentName="DMS_ModuleApparelBase" Abstract="True">
        <thingCategories>
            <li>DMS_Module_Attachment</li>
        </thingCategories>
        <apparel>
            <bodyPartGroups>
                <li>Arms</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
            <parentTagDef>WGApparelBody</parentTagDef>
        </apparel>
    </ThingDef>

    <ThingDef Name="DMS_ModuleApparelArmRight" ParentName="DMS_ModuleApparelBase" Abstract="True">
        <thingCategories>
            <li>DMS_Module_Equipment</li>
        </thingCategories>
        <apparel>
          <bodyPartGroups>
            <li>Waist</li>
          </bodyPartGroups>
          <layers>
            <li>Overhead</li>
          </layers>
          <parentTagDef>WGApparelBody</parentTagDef>
        </apparel>
      </ThingDef>
    
</Defs>
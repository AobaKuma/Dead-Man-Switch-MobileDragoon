<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <!-- 维护坞 -->
  <ThingDef ParentName="BuildingBase">
    <defName>DMS_Building_MaintenanceBay</defName>
    <label>maintenance bay</label>
    <description>A place for mobile dragoon assembly and maintenance, it has a gantry to lift modules of mobile dragoon.</description>
    <thingClass>WalkerGear.Building_MaintenanceBay</thingClass>
    <graphicData>
      <texPath>Things/Building/DragoonBay_Bottom</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4,4)</drawSize>
    </graphicData>
    <uiIconPath>Things/Building/DragoonBay</uiIconPath>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <canOverlapZones>false</canOverlapZones>
    <drawerType>MapMeshAndRealTime</drawerType>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <WorkToBuild>3600</WorkToBuild>
      <MaxHitPoints>200</MaxHitPoints>
    </statBases>
    <costList>
      <Steel>200</Steel>
    </costList>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>true</useHitPoints>
    <size>(3,3)</size>
    <pathCost>100</pathCost>
    <designationCategory>DMS_Category</designationCategory>
    <uiOrder>2000</uiOrder>
    <passability>PassThroughOnly</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-2)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>WalkerGear.ITab_MechGear</li>
    </inspectorTabs>
    <building>
      <buildingTags>
        <li>Production</li>
      </buildingTags>
      <relatedBuildCommands>
        <li>DMS_Building_ComponentStorage</li>
      </relatedBuildCommands>
    </building>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
          <li>DMS_Building_ComponentStorage</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_ReportWorkSpeed">
        <workSpeedStat>WorkTableWorkSpeedFactor</workSpeedStat>
      </li>
      <li Class="DMSLib.CompProperties_BuildingExtraRenderer">
        <extraGraphic>
          <li>
            <texPath>Things/Building/DragoonBay_Top</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(4,4)</drawSize>
            <drawOffset>(0,0.7,0)</drawOffset>
          </li>
        </extraGraphic>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_ReportWorkSpeedPenalties</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>

  <!-- 部件櫃 -->
  <ThingDef ParentName="BuildingBase">
    <defName>DMS_Building_ComponentStorage</defName>
    <label>Module Storage</label>
    <description>...</description>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Things/Building/ModulePlatform</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4,4)</drawSize>
    </graphicData>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <canOverlapZones>false</canOverlapZones>
    <altitudeLayer>Building</altitudeLayer>
    <tickerType>Rare</tickerType>
    <statBases>
      <WorkToBuild>3600</WorkToBuild>
    </statBases>
    <costList>
      <Steel>50</Steel>
    </costList>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>true</useHitPoints>
    <size>(3,1)</size>
    <pathCost>100</pathCost>
    <designationCategory>DMS_Category</designationCategory>
    <uiOrder>2000</uiOrder>
    <passability>PassThroughOnly</passability>
    <hasInteractionCell>false</hasInteractionCell>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <maxItemsInCell>1</maxItemsInCell>
      <fixedStorageSettings>
        <filter>
          <disallowNotEverStorable>true</disallowNotEverStorable>
          <categories>
            <li>DMS_Module</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Preferred</priority>
        <filter>
          <categories>
            <li>DMS_Module</li>
          </categories>
        </filter>
      </defaultStorageSettings>
      <relatedBuildCommands>
        <li>DMS_Building_MaintenanceBay</li>
      </relatedBuildCommands>
    </building>
    <comps>
      <li Class = "CompProperties_Facility">
        <maxSimultaneous>2</maxSimultaneous>
      </li>
      <li>
        <compClass>WalkerGear.CompComponentStorage</compClass>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>DMS_Building_Wreckage</defName>
    <graphicData>
      <texPath>Things/Building/ModulePlatform</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <canOverlapZones>false</canOverlapZones>
    <altitudeLayer>Building</altitudeLayer>
    <useHitPoints>true</useHitPoints>
    <size>(2,2)</size>
    <pathCost>100</pathCost>
    <passability>PassThroughOnly</passability>
    <surfaceType>Item</surfaceType>
    <comps>
      <li><compClass>WalkerGear.CompWreckage</compClass></li>
    </comps>
  </ThingDef>
</Defs>
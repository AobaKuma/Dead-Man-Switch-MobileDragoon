    <ThingDef ParentName="DMS_ModuleApparelMountRight">
        <defName>DMS_Apparel_TurretPackLight</defName>
        <label>Mounted LMG</label>
        <description>Todo.</description>
        <graphicData>
            <texPath>Things/Dragoon/TurretPack/TurretPack_MachineGun</texPath>
        </graphicData>
        <statBases>
            <Mass>0</Mass>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.12</MoveSpeed>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Dragoon/TurretPack/apparel</wornGraphicPath>
            
            <renderNodeProperties>
                <li>
                    <debugLabel>肩部炮塔底座</debugLabel>
                    <nodeClass>PawnRenderNode_Apparel</nodeClass>
                    <workerClass>PawnRenderNodeWorker_Apparel_Body</workerClass>
                    <parentTagDef>WGApparelBody</parentTagDef>
                    <drawData>
                        <scale>0.75</scale>
                        <defaultData>
                            <layer>20</layer>
                        </defaultData>
                        <dataSouth>
                            <offset>(-0.50,0,1.05)</offset>
                            <layer>0</layer>
                        </dataSouth>
                        <dataNorth>
                            <offset>(0.50,0,0.45)</offset>
                            <layer>20</layer>
                        </dataNorth>
                        <dataWest>
                            <offset>(0.5,0,0.45)</offset>
                            <layer>0</layer>
                        </dataWest>
                        <dataEast>
                            <offset>(-0.80,0,0.45)</offset>
                        </dataEast>
                    </drawData>
                </li>
                <li>
                    <debugLabel>肩部炮塔</debugLabel>
                    <nodeClass>WalkerGear.PawnRenderNode_VerbCompTurret</nodeClass>
                    <workerClass>WalkerGear.PawnRenderNodeWorker_VerbCompTurret</workerClass>
                    <texPath>Things/Turrets/DMS_Gun_LMG</texPath>
                    <anchorTag>Gun</anchorTag>
                    <parentTagDef>WGApparelBody</parentTagDef>
                    <drawSize>1.25</drawSize>
                    <baseLayer>40</baseLayer>
                    <pawnType>Any</pawnType>
                    <drawData>
                        <scale>0.75</scale>
                        <defaultData>
                            <layer>30</layer>
                        </defaultData>
                        <dataSouth>
                            <offset>(-0.80,0,1.05)</offset>
                            <layer>10</layer>
                        </dataSouth>
                        <dataNorth>
                            <offset>(0.50,0,0.25)</offset>
                            <layer>30</layer>
                        </dataNorth>
                        <dataWest>
                            <offset>(0.75,0,0.5)</offset>
                            <layer>10</layer>
                            <rotationOffset>-180</rotationOffset>
                        </dataWest>
                        <dataEast>
                            <offset>(-1.0,0,0.15)</offset>
                        </dataEast>
                    </drawData>
                </li>
            </renderNodeProperties>
        </apparel>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <label>Gun</label>
                <defaultProjectile>Bullet_MiniTurret</defaultProjectile>
                <warmupTime>0</warmupTime>
                <range>28.9</range>
                <hasStandardCommand>true</hasStandardCommand>
                <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
                <burstShotCount>1</burstShotCount>
                <soundCast>GunShotA</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <comps>
            <li Class="WalkerGear.CompProperties_WalkerComponent">
                <ItemDef>DMS_Module_TurretPackLight</ItemDef>
                <slot>MountRight</slot>
            </li>
            <li Class="MVCF.Comps.CompProperties_VerbGiver">
                <verbProps>
                    <li>
                        <label>Gun</label>
                        <visualLabel>mini-turret gun</visualLabel>
                        <description>A simple automatic gun made to be mounted on a shoulder.</description>
                        <canBeToggled>true</canBeToggled>
                        <comps>
                            <li Class="WalkerGear.VerbCompPropertiesTurret">
                                <uniqueTargets>true</uniqueTargets>
                                <angleOffset>-90</angleOffset>
                            </li>
                        </comps>
                    </li>
                </verbProps>
            </li>
        </comps>
    </ThingDef>


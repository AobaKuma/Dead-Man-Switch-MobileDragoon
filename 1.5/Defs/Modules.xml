    <ThingDef ParentName="DMS_ModuleApparelBase">
        <defName>DMS_Apparel_TurretPackLight</defName>
        <label>Mounted LMG</label>
        <description>Todo.</description>
        <graphicData>
            <texPath>Things/Dragoon/TurretPack/TurretPack_MachineGun</texPath>
        </graphicData>
        <statBases>
            <Mass>0</Mass>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.12</MoveSpeed>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Shoulders</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Dragoon/TurretPack/apparel</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <parentTagDef>WGApparelBody</parentTagDef>
            <drawData>
                <scale>0.75</scale>
                <defaultData>
                    <layer>20</layer>
                </defaultData>
                <dataSouth>
                    <offset>(-0.50,0,1.05)</offset>
                    <layer>0</layer>
                </dataSouth>
                <dataNorth>
                    <offset>(0.50,0,0.45)</offset>
                    <layer>20</layer>
                </dataNorth>
                <dataWest>
                    <offset>(0.5,0,0.45)</offset>
                    <layer>0</layer>
                </dataWest>
                <dataEast>
                    <offset>(-0.80,0,0.45)</offset>
                </dataEast>
            </drawData>
        </apparel>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <label>Gun</label>
                <defaultProjectile>Bullet_MiniTurret</defaultProjectile>
                <warmupTime>0</warmupTime>
                <range>28.9</range>
                <hasStandardCommand>true</hasStandardCommand>
                <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
                <burstShotCount>1</burstShotCount>
                <soundCast>GunShotA</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <comps>
            <li Class="WalkerGear.CompProperties_WalkerComponent">
                <isApparal>true</isApparal>
                <ItemDef>DMS_Module_TurretPackLight</ItemDef>
                <slot>MountRight</slot>
            </li>
            <li Class="MVCF.Comps.CompProperties_VerbGiver">
                <verbProps>
                    <li>
                        <label>Gun</label>
                        <visualLabel>mini-turret gun</visualLabel>
                        <description>A simple automatic gun made to be mounted on a shoulder.</description>
                        <canBeToggled>true</canBeToggled>
                        <comps>
                            <li Class="MVCF.VerbComps.VerbCompProperties_Turret">
                                <compClass>MVCF.VerbComps.VerbComp_Turret</compClass>
                                <humanAsDefault>false</humanAsDefault>
                                <graphic>
                                    <texPath>Things/Turrets/Dummy</texPath>
                                    <!-- <texPath>Things/Turrets/DMS_Gun_LMG</texPath> -->
                                    <graphicClass>Graphic_Single</graphicClass>
                                </graphic>
                                <defaultPosition>
                                    <Up>(0.75,0.5)</Up>
                                    <Down>(-0.65,1.15)</Down>
                                    <Right>(-1.25,0.5)</Right>
                                    <Left>(0.25,1.00)</Left>
                                    <Default>(0,0)</Default>
                                </defaultPosition>
                                <drawScale>1.125</drawScale>
                                <uniqueTargets>true</uniqueTargets>
                                <drawAsEquipment>false</drawAsEquipment>
                                <onlyWhenDrafted>false</onlyWhenDrafted>
                            </li>
                        </comps>
                    </li>
                </verbProps>
            </li>
        </comps>
    </ThingDef>


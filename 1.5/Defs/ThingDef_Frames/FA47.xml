    <comps>
      <li Class="WalkerGear.CompProperties_WalkerComponent">
        <ItemDef>DMS_Module_FA47_Core</ItemDef>
        <slot>Core</slot>
      </li>
    </comps>
    <modExtensions>
      <li Class="WalkerGear.BuildingWreckage">

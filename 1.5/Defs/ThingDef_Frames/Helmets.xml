      <texPath>Things/Item/Module</texPath>
    </graphicData>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>50</Mass>
    </statBases>
    <comps>
      <li Class="WalkerGear.CompProperties_WalkerComponent">
        <EquipedThingDef>DMS_Apparel_Groyne_Helmet</EquipedThingDef>
        <slots>
          <li>Head</li>
        </slots>
      </li>
    </comps>
    <recipeMaker>
      <researchPrerequisite>DMS_MobileDragoon</researchPrerequisite>
      <skillRequirements>

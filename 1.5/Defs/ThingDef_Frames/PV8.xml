    </statBases>
    <comps>
      <li Class="WalkerGear.CompProperties_WalkerComponent">
        <EquipedThingDef>DMS_Apparel_PV8_Helmet</EquipedThingDef>
        <slots>
          <li>Head</li>
        </slots>
      </li>
    </comps>    
    <recipeMaker>
      <researchPrerequisite>DMS_MobileDragoonAdvanced</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Tungsteel>50</Tungsteel>
      <Steel>40</Steel>

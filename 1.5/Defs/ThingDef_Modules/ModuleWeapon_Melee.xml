<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="DMS_BaseDragoonWeapon">
    <defName>DMS_Dragoon_Sword</defName>
    <label>Dragoon Combat Sword</label>
    <description>A two-handed great sword used by dragoon, it is specially designed to fight against large creatures and war machines, and has the functions of a machete and an armor-piercing hammer. Its own weight makes it very effective even when used to clear light infantry and fortifications.</description>
    <weaponClasses>
      <li>Melee</li>
    </weaponClasses>
    <graphicData>
      <texPath>Things/Weapons/CombatSword</texPath>
      <drawSize>1.75</drawSize>
    </graphicData>
    <statBases>
      <Mass>0</Mass>
    </statBases>
    <comps>
      <li Class="WalkerGear.CompProperties_MeleeSweep">
        <damageDef>Cut</damageDef>
        <damage>40</damage>
        <armorPenetration>0.5</armorPenetration>
        <radius>3</radius>
        <angle>180</angle>
      </li>
    </comps>
    <equippedDistanceOffset>0.5</equippedDistanceOffset>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <tools Inherit="False">
      <li>
        <label>poke</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>100</power>
        <armorPenetration>1.2</armorPenetration>
        <cooldownTime>3</cooldownTime>
        <chanceFactor>2</chanceFactor>
      </li>
      <li>
        <label>sweep</label>
        <capacities>
          <li>WG_HeavySweep</li>
        </capacities>
        <power>90</power>
        <cooldownTime>2</cooldownTime>
        <chanceFactor>3</chanceFactor>
      </li>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>48</power>
        <armorPenetration>0.6</armorPenetration>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
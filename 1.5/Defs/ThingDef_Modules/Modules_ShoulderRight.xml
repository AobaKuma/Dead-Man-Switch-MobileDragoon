            <researchPrerequisite>DMS_MobileDragoon</researchPrerequisite>
        </recipeMaker>
        <costList>
            <Steel>100</Steel>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
        <comps>
            <li Class="WalkerGear.CompProperties_WalkerComponent">

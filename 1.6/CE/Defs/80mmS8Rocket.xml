	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base80mmRocket" ParentName="BaseExplosiveBullet" Abstract="true">
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>130</speed>
			<soundAmbient>RocketPropelledLoop_Small</soundAmbient>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ProjectileFleck">
				<FleckDatas>
					<li>
						<fleck>Fleck_CERocketFlame</fleck>
						<emissionsPerTick>10</emissionsPerTick>
						<flecksPerEmission>4</flecksPerEmission>
						<scale>0.7</scale>
						<cutoffTickRange>25~30</cutoffTickRange>
						<originOffset>0.4</originOffset>
					</li>
					<li>
						<fleck>Fleck_CERocketSmokeTrail</fleck>
						<emissionsPerTick>2</emissionsPerTick>
						<rotation>0~360</rotation>
						<flecksPerEmission>1</flecksPerEmission>
					</li>
					<li>
						<fleck>Fleck_CERocketSmoke</fleck>
						<emissionsPerTick>4</emissionsPerTick>
						<rotation>0~360</rotation>
						<flecksPerEmission>2</flecksPerEmission>
						<scale>0.5</scale>
						<cutoffTickRange>25~60</cutoffTickRange>
					</li>
				</FleckDatas>
			</li>
		</comps>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base80mmRocket">
		<defName>Bullet_80mmRocket_HE</defName>
		<label>80mm S8 Rocket (HE)</label>
		<graphicData>
			<texPath>Things/Projectiles/Rocket/S8/HE</texPath>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>123</speed>
			<damageDef>Bomb</damageDef>
			<damageAmountBase>200</damageAmountBase>
			<explosionRadius>3</explosionRadius>
			<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_Large>14</Fragment_Large>
					<Fragment_Small>26</Fragment_Small>
				</fragments>
			</li>
		</comps>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base80mmRocket">
		<defName>Bullet_80mmRocket_HEAT</defName>
		<label>80mm S8 Rocket (HEAT)</label>
		<thingClass>CombatExtended.BulletCE</thingClass>
		<graphicData>
			<texPath>Things/Projectiles/Rocket/S8/HEAT</texPath>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<damageAmountBase>222</damageAmountBase>
			<armorPenetrationSharp>420</armorPenetrationSharp>
			<armorPenetrationBlunt>47.913</armorPenetrationBlunt>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<damageAmountBase>108</damageAmountBase>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<explosiveRadius>1.6</explosiveRadius>
				<explosionSound>MortarBomb_Explode</explosionSound>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
			</li>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_Large>8</Fragment_Large>
					<Fragment_Small>10</Fragment_Small>
				</fragments>
			</li>
		</comps>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base80mmRocket">
		<defName>Bullet_80mmRocket_Thermobaric</defName>
		<label>80mm S8 Rocket (Thermobaric)</label>
		<graphicData>
			<texPath>Things/Projectiles/Rocket/S8/Thermobaric</texPath>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>73</speed>
			<damageDef>Thermobaric</damageDef>
			<damageAmountBase>309</damageAmountBase>
			<explosionRadius>5.5</explosionRadius>
			<armorPenetrationSharp>0</armorPenetrationSharp>
			<armorPenetrationBlunt>0</armorPenetrationBlunt>
			<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
			<ai_IsIncendiary>true</ai_IsIncendiary>
		</projectile>
	</ThingDef>


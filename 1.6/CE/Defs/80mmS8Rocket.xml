<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingCategoryDef>
		<defName>Ammo80mmRocket</defName>
		<label>80mm S8 Rocket</label>
		<parent>AmmoRockets</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberRocket</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_80mmRocket_direct</defName>
		<label>80mm S8 Rocket</label>
		<ammoTypes>
			<Ammo_80mmRocket_HE>Bullet_80mmRocket_HE</Ammo_80mmRocket_HE>
			<Ammo_80mmRocket_HEAT>Bullet_80mmRocket_HEAT</Ammo_80mmRocket_HEAT>
			<Ammo_80mmRocket_Thermobaric>Bullet_80mmRocket_Thermobaric</Ammo_80mmRocket_Thermobaric>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="80mmRocketBase" ParentName="HeavyAmmoBase" Abstract="True">
		<description>An unguided rocket launched from 80mm tubes.</description>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo80mmRocket</li>
		</thingCategories>
		<stackLimit>25</stackLimit>
		<cookOffFlashScale>25</cookOffFlashScale>
		<cookOffSound>MortarBomb_Explode</cookOffSound>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="80mmRocketBase">
		<defName>Ammo_80mmRocket_HE</defName>
		<label>80mm S8 rocket (HE)</label>
		<graphicData>
			<texPath>Things/Ammo/Rocket/80mmS8/HE</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<Mass>17</Mass>
			<Bulk>22.62</Bulk>
		</statBases>
		<ammoClass>RocketHE</ammoClass>
		<detonateProjectile>Bullet_80mmRocket_HE</detonateProjectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="80mmRocketBase">
		<defName>Ammo_80mmRocket_HEAT</defName>
		<label>80mm S8 rocket (HEAT)</label>
		<graphicData>
			<texPath>Things/Ammo/Rocket/80mmS8/HEAT</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<Mass>11.3</Mass>
			<Bulk>23.68</Bulk>
		</statBases>
		<ammoClass>RocketHEAT</ammoClass>
		<detonateProjectile>Bullet_80mmRocket_HEAT</detonateProjectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="80mmRocketBase">
		<defName>Ammo_80mmRocket_Thermobaric</defName>
		<label>80mm S8 rocket (Thermobaric)</label>

    <techprintCount>1</techprintCount>
    <techprintCommonality>0.5</techprintCommonality>
    <techprintMarketValue>1500</techprintMarketValue>
    <heldByFactionCategoryTags>
      <li>DMS</li>
    </heldByFactionCategoryTags>
  </ResearchProjectDef>


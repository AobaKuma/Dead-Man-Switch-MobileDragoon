<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- 硬的要命的"防波堤"一體化 -->
  <ThingDef ParentName="DMS_ModuleItemHead">
    <defName>DMS_Module_Groyne_Helmet</defName>
    <label>"Groyne" helmet</label>
    <description>An armored cover that provides driver protection without adequate optical
      manufacturing processes. It is bulky but does provide some durability.</description>
    <descriptionHyperlinks>
      <ThingDef>DMS_Apparel_Groyne_Helmet</ThingDef>
    </descriptionHyperlinks>
    <thingCategories Inherit="false">
      <li>DMS_Module_Helmet</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Item/Module</texPath>
    </graphicData>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>50</Mass>
    </statBases>
    <comps>
      <li Class="Exosuit.CompProperties_ExosuitModule">
        <EquipedThingDef>DMS_Apparel_Groyne_Helmet</EquipedThingDef>
        <occupiedSlots>
          <li>Head</li>
        </occupiedSlots>
      </li>
    </comps>
    <recipeMaker>
      <researchPrerequisite>DMS_MobileDragoon</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <workAmount>22500</workAmount>
    </recipeMaker>
    <smeltProducts>
      <Steel>75</Steel>
    </smeltProducts>
    <butcherProducts>
      <ChunkSlagSteel>4</ChunkSlagSteel>
      <ComponentIndustrial>2</ComponentIndustrial>
      <ComponentStamped>1</ComponentStamped>
    </butcherProducts>
    <costList>
      <Steel>150</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
      <ComponentStamped>1</ComponentStamped>
    </costList>
  </ThingDef>
  <ThingDef ParentName="DMS_ModuleApparelHead">
    <defName>DMS_Apparel_Groyne_Helmet</defName>
    <label>"Groyne" helmet</label>
    <description>An armored cover that provides driver protection without adequate optical
      manufacturing processes. It is bulky but does provide some durability.</description>
    <descriptionHyperlinks>
      <ThingDef>DMS_Module_Groyne_Helmet</ThingDef>
    </descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Dragoon/Groyne/helmet_south</texPath>
    </graphicData>
    <statBases>
      <Mass>50</Mass>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.3</MoveSpeed>
      <ToxicEnvironmentResistance>0.75</ToxicEnvironmentResistance>
      <HypoxiaResistance MayRequire="kentington.saveourship2">1</HypoxiaResistance>
      <DecompressionResistance MayRequire="kentington.saveourship2">0.15</DecompressionResistance>
    </equippedStatOffsets>
    <apparel>
      <immuneToToxGasExposure>true</immuneToToxGasExposure>
      <wornGraphicPath>Things/Dragoon/Groyne/helmet</wornGraphicPath>
    </apparel>
    <comps>
      <li Class="Exosuit.CompProperties_ExosuitModule">
        <ItemDef>DMS_Module_Groyne_Helmet</ItemDef>
        <occupiedSlots>
          <li>Head</li>
        </occupiedSlots>
      </li>
    </comps>
  </ThingDef>


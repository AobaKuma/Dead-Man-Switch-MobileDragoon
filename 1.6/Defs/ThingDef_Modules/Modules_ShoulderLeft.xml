          <offset>(1,0,0.75)</offset>
          <layer>0</layer>
        </dataSouth>
        <dataNorth>
          <offset>(-1,0,0.55)</offset>
          <layer>80</layer>
        </dataNorth>
        <dataWest>
          <offset>(0.75,0,0.45)</offset>
          <layer>80</layer>
        </dataWest>
        <dataEast>
          <offset>(0.1,0,0.75)</offset>
          <layer>-2</layer>

  <ThingDef ParentName="DMS_ModuleApparelMountRight">
    <defName>DMS_Apparel_TurretPackLight</defName>
    <label>LMG Shoulder Mount</label>
    <description>A shoulder-mounted remote-controlled machine gun.</description>
    <graphicData>
      <texPath>Things/Dragoon/TurretPack/TurretPack_MachineGun</texPath>
    </graphicData>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Mass>30</Mass>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.12</MoveSpeed>
    </equippedStatOffsets>
    <tickerType>Normal</tickerType>
    <apparel>
      <wornGraphicPath>Things/Dragoon/TurretPack/apparel</wornGraphicPath>
      <drawData>
        <scale>0.75</scale>
        <dataSouth>
          <offset>(-0.50,0,1.05)</offset>
          <layer>0</layer>
        </dataSouth>
        <dataNorth>
          <offset>(0.50,0,0.35)</offset>
          <layer>75</layer>
        </dataNorth>
        <dataWest>
          <offset>(0,0,0.6)</offset>
          <layer>0</layer>
        </dataWest>
        <dataEast>
          <offset>(-0.80,0,0.45)</offset>
        </dataEast>
      </drawData>
      <renderNodeProperties>
        <li Class="Mechsuit.PawnRenderNodeProperties_TurretGun">
          <debugLabel>ShoulderTurret_LMG</debugLabel>
          <texPath>Things/Turrets/DMS_Gun_LMG</texPath>
          <drawData>
            <scale>1</scale>
            <defaultData>
              <layer>85</layer>
            </defaultData>
            <dataNorth>
              <offset>(0.65,0,0.75)</offset>
            </dataNorth>
            <dataSouth>
              <offset>(-0.65,0,1.475)</offset>
            </dataSouth>
            <dataEast>
              <offset>(-0.85,0,0.7)</offset>
            </dataEast>
            <dataWest>
              <offset>(0.6,0,1.5)</offset>
            </dataWest>
          </drawData>
        </li>
      </renderNodeProperties>
    </apparel>
    <verbs>
      <li>
        <verbClass>Mechsuit.AsyncShootVerb</verbClass>
        <label>Gun</label>
        <hasStandardCommand>true</hasStandardCommand>
        <commandIcon>Things/Dragoon/TurretPack/TurretPack_MachineGun</commandIcon>
        <defaultProjectile>Bullet_AssaultRifle</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>15.9</range>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <burstShotCount>5</burstShotCount>
        <soundCast>Shot_AssaultRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="Exosuit.CompProperties_ExosuitModule">
        <ItemDef>DMS_Module_TurretPackLight</ItemDef>
        <occupiedSlots>
          <li>MountRight</li>
        </occupiedSlots>
      </li>
      <li Class="Mechsuit.CompProperties_TurretGun">
        <!-- 示例：限制炮塔旋转范围（相对于机体正面） -->
        <!-- <minAngle>-45</minAngle> --><!-- 向左偏转最大45度 -->
        <!-- <maxAngle>45</maxAngle> --><!-- 向右偏转最大45度 -->
      </li>
    </comps>
  </ThingDef>


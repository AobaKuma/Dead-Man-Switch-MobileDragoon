<Defs>
  <!-- (右)中繼天線 -->
  <ThingDef ParentName="DMS_ModuleItemMountRight">
    <defName>DMS_Module_RelayAntenna</defName>
    <label>Relay Antenna</label>
    <description>An antenna module that expands the control range for friendly mechanics. \n\nAlthough the control range is relatively limited, it is enough to allow mechanics to coordinate infantry around the frame.</description>
    <descriptionHyperlinks>
      <ThingDef>DMS_Apparel_RelayAntenna</ThingDef>
    </descriptionHyperlinks>
    <statBases>
      <MaxHitPoints>25</MaxHitPoints>
      <Mass>15</Mass>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>DMS_MobileDragoonModule</researchPrerequisite>
      <workAmount>30000</workAmount>
    </recipeMaker>
    <costList>
      <Steel>160</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="Exosuit.CompProperties_ExosuitModule">
        <EquipedThingDef>DMS_Apparel_RelayAntenna</EquipedThingDef>
        <occupiedSlots>
          <li>MountRight</li>
        </occupiedSlots>
      </li>
    </comps>
  </ThingDef>


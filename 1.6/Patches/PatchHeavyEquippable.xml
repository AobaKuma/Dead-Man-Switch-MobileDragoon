<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/Fortified.HeavyEquippableDef[
            defName="BulkyAutomatroid" or
            defName="StandardAutomatroid" or
            defName="LightAutomatroid"
            ]/EquippableWithApparel</xpath>
        <value>
            <li>DMS_Apparel_PF3_Core</li>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/Fortified.HeavyEquippableDef[
            defName="HeavyAutomatroid" or
            defName="TransHeavyAutomatroid" or
            defName="BulkyAutomatroid" or
            defName="StandardAutomatroid"
            ]/EquippableWithApparel</xpath>
        <value>
            <li>DMS_Apparel_AT34_Core</li>
            <li>DMS_Apparel_PV4_Core</li>
            <li>DMS_Apparel_PV8_Core</li>
            <li>DMS_Apparel_FA47_Core</li>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/Fortified.HeavyEquippableDef[defName="UltraHeavyAutomatroid"]/EquippableWithApparel</xpath>
        <value>
            <li>DMS_Apparel_PackFrame</li>
        </value>
    </Operation>
</Patch>